<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="295dp"
        android:layout_height="209dp"
        android:layout_marginTop="32dp"
        android:scrollbars="vertical"
        android:text="Hello World!"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="135dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/editText_newID"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <Button
        android:id="@+id/button_recognize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:text="Recognize"
        app:layout_constraintBottom_toTopOf="@+id/button_takePhotoAndroid"
        app:layout_constraintStart_toEndOf="@+id/button_remove" />

    <Button
        android:id="@+id/button_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:text="Enroll"
        app:layout_constraintBottom_toTopOf="@+id/button_database"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_newID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Name to enroll:"
        android:inputType="textPersonName"
        android:text="Name?"
        app:layout_constraintBottom_toTopOf="@+id/button_remove"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_database"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="Manage Database"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_takePhotoAndroid"
        android:layout_width="153dp"
        android:layout_height="74dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="12dp"
        android:text="Take Android Photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_database" />

</android.support.constraint.ConstraintLayout >